{
  "compilerOptions": {
    "target": "es2015",
    "lib": [ "es2015" ],
    "module": "commonjs",
    "outDir": "out",
    "importHelpers": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "removeComments": true,
    "esModuleInterop": true
  },
  "include": [
    "src/main.ts",
    "src/worker/mocha-private.d.ts",
    "src/worker/loadConfig.ts",
    "src/worker/main.ts",
    "src/test/*.test.ts"
  ]
}
